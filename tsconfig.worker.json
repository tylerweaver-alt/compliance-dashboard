{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": false,
    "declarationMap": false,
    "outDir": "./dist/worker",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "worker/**/*.ts",
    "lib/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    ".next"
  ]
}

